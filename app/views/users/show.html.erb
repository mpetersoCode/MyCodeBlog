<div class="row">
  <aside class="span3">
	<section>
      <% if signed_in? %>
	    <%= render 'shared/post_form' %>
      <% end %>
    </section>
  </aside>
<% if signed_in? %>
  <div class="span7 rightsided">
<% else %>
  <div class="span7">
	<% end %>
      <% if @user.posts.any? %>
        <h3>Posts (<%= @user.posts.count %>)</h3>
        <ol class="posts">
          <%= render @posts %>
        </ol>
        <%= will_paginate @posts %>
      <% end %>
    </div>
  </div>
</div>